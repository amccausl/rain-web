
###
Default config settings for comic widget
###
localStorage["comic.background"] = null # The background colour, or dynamic if null
localStorage["comic.rotation"] = null   # The rotation for the pages when browsing
localStorage["comic.page_display"] = 1  # Number of pages to display on screen 
localStorage["comic.manga"] = false     # If the type can't be determined, browse in manga style
localStorage["comic.preview"] = null    # Preview as thumbnails, names or no preview

###
Keybindings:
Next        right arrow
Previous    left arrow
Fullscreen  f
Hide/Unhide h
